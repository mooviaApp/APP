{
  "name": "moovia-monorepo",
  "version": "1.0.0",
  "description": "Dashboard y aplicacion del sensor de seguimiento de la barra en movimiento de halterofilia.",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run start:dev --workspace=apps/backend",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\" \"npm run dev:mobile\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mooviaApp/APP.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@react-native/metro-config": "^0.83.0",
    "baseline-browser-mapping": "^2.9.2",
    "concurrently": "^9.1.0",
    "metro": "^0.81.0",
    "metro-cache": "^0.81.0",
    "metro-config": "^0.81.0",
    "metro-resolver": "^0.81.0"
  },
  "bugs": {
    "url": "https://github.com/mooviaApp/APP/issues"
  },
  "homepage": "https://github.com/mooviaApp/APP#readme",
  "dependencies": {
    "expo": "~54.0.25",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
