generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  email         String           @unique
  createdAt     DateTime         @default(now())
  profile       AthleteProfile?
  devices       Device[]
  sessions      WorkoutSession[]
}

model AthleteProfile {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
  bodyweight Float?
  height     Float?
}

model Device {
  id          String         @id @default(cuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id])
  name        String
  connectedAt DateTime?
  sensorData  SensorPacket[]
}

model WorkoutSession {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id])
  exercise  String
  date      DateTime @default(now())
  sets      Set[]
}

model Set {
  id         String         @id @default(cuid())
  sessionId  String
  session    WorkoutSession @relation(fields: [sessionId], references: [id])
  weight     Float
  reps       Int
  sensorData SensorPacket[]
}

model SensorPacket {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Relación con Set
  set     Set    @relation(fields: [setId], references: [id])
  setId   String

  // Opcional: relación con Device (si quieres ligarlo al sensor físico)
  device   Device? @relation(fields: [deviceId], references: [id])
  deviceId String?

  // Datos del paquete
  timestamp DateTime
  ax        Float
  ay        Float
  az        Float
  gx        Float
  gy        Float
  gz        Float
}
